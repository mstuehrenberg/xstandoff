<xs:schema targetNamespace="http://www.xstandoff.net/2009/xstandoff/1.1"
  xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning"
  xmlns:all="http://www.xstandoff.net/2009/all" elementFormDefault="qualified"
  xmlns:xsf="http://www.xstandoff.net/2009/xstandoff/1.1" xmlns:dcr="http://www.isocat.org/ns/dcr"
  vc:minVersion="1.1">
  <xs:import namespace="http://www.w3.org/XML/1998/namespace" schemaLocation="xml.xsd"/>
  <xs:import namespace="http://www.isocat.org/ns/dcr" schemaLocation="dcr.xsd"/>
  <xs:annotation>
    <xs:documentation xml:lang="en">
      <![CDATA[
